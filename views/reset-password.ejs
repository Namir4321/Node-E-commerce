<%-include('./includes/head.ejs')%>
<%-include('./includes/nav.ejs')%>

<% if (message.length > 0) { %>
  <div class="alert alert-<%=type%>">
    <%= message %>
  </div>
<% } %>

<div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
      
  <form action="" method="post" style="width: 23rem;">

    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forgot-Password</h3>

    <div class="form-outline mb-4">
      <input type="password" id="form2Example18" class="form-control form-control-lg"placeholder="YOUR PASSWORD"name="password" />
      <label class="form-label" for="form2Example18"></label>
    </div>

    <div class="form-outline mb-4">
      <input type="password" id="form2Example18" class="form-control form-control-lg"placeholder="CONFIRM PASSWORD"name="confirm" />
      <label class="form-label" for="form2Example18"></label>
    </div>

    <div class="pt-1 mb-4">
      <button class="btn btn-info btn-lg btn-block" type="submit">Reset Password</button>
    </div>
    <p>Don't have an account? <a href="/register" class="link-info">Register here</a></p>

  </form>

</div>

